<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playground_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/saved_data_list_item_height"
    android:background="@drawable/saved_data_list_item_background"
    tools:context="com.bj4.yhh.coachboard.MainActivity" >

    <TextView
        android:id="@+id/saved_data_list_item_title"
        android:background="#10000000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/saved_data_list_item_height"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:textSize="@dimen/saved_data_list_item_title_textsize" />

</RelativeLayout>